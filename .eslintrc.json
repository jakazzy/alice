{
    "env": {
        "es2020": true,
        "node": true
    },
    "extends": ["airbnb-base", "prettier", "plugin:node/recommended-module"],
    "plugins": ["prettier"],
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "rules": {
        "prettier/prettier": "error",
        "max-len": ["error", { "code": 85 }],
        "spaced-comment": "off",
        "no-console": "warn",
        "consistent-return": "off",
        "func-names": "off",
        "object-shorthand": "off",
        "no-process-exit": "off",
        "no-param-reassign": "off",
        "no-return-await": "off",
        "no-underscore-dangle": "off",
        "class-methods-use-this": "off",
        "prefer-destructuring": ["error", { "object": true, "array": false }],
        "no-unused-vars": [
            "error",
            { "argsIgnorePattern": "req|res|next|val" }
        ],
        "node/no-unsupported-features/es-syntax": [
            "error",
            {
                "version": ">=8.0.0",
                "ignores": ["modules"]
            }
        ]
    }
}
